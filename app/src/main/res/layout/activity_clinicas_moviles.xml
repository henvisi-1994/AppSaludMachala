<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondogeneral"
    android:orientation="vertical"
    tools:context=".ClinicasMoviles">

    <TextView
        android:id="@+id/especialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/gothambold"
        android:text="CLÍNICAS MÓVILES"
        android:textAlignment="center"
        android:textColor="@color/azultitulo"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextdescripcionclinica"
        android:layout_width="353dp"
        android:layout_height="81dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/gothammedium"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:text="@string/descripcion_clinicas"
        android:textAlignment="center"
        android:textColor="@color/azulparrafos"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/especialidad"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="369dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/editTextdescripcionclinica"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/doctor" />

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="20sp">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:fontFamily="@font/gothambold"
                android:text="SERVICIOS DE"
                android:textAlignment="viewStart"
                android:textColor="@color/azultitulo"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:fontFamily="@font/gothambold"
                android:text="SALUD"
                android:textAlignment="textStart"
                android:textColor="@color/azulparrafos"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text=" ■ Enfermería"
                android:textAlignment="viewStart"
                android:textColor="@color/azulparrafos"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text=" ■ Medicina General"
                android:textAlignment="viewStart"
                android:textColor="@color/azulparrafos"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text=" ■ Odontología"
                android:textAlignment="viewStart"
                android:textColor="@color/azulparrafos"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text=" ■ Medicina Básica"
                android:textAlignment="viewStart"
                android:textColor="@color/azulparrafos"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextdescripcioncm2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"

                android:background="@android:color/transparent"
                android:editable="false"
                android:elegantTextHeight="false"
                android:ellipsize="none"
                android:ems="10"
                android:fontFamily="@font/gothammedium"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:justificationMode="inter_word"
                android:paddingRight="20sp"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:soundEffectsEnabled="false"
                android:text="@string/descripcion_cm2"
                android:textAlignment="center"
                android:textColor="@color/azulparrafos"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:onClick="enlaceclinicamoviles"
                app:srcCompat="@drawable/iconoreceta" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:onClick="enlaceclinicamoviles"
                android:text="Click Aquí"
                android:textAlignment="center"
                android:textColor="#227296"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-34dp" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="323dp"
        android:layout_height="61dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/gothamuitraitalic"
            android:gravity="center_vertical"
            android:text="La atención es gratuita"
            android:textColor="@color/azulparrafos"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/logodariomacas" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gothambold"
            android:onClick="inicio"
            android:text="INICIO"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gothambold"
            android:onClick="noticias"
            android:text="NOTICIAS"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gothambold"
            android:onClick="contacto"
            android:text="CONTACTENOS"
            android:textColor="@android:color/white" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>