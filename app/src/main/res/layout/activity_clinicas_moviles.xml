<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondogeneral"
    tools:context=".ClinicasMoviles">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="8sp"
        android:fontFamily="@font/gothambold"
        android:text="CLÍNICAS MÓVILES"
        android:textAlignment="center"
        android:textColor="#22487E"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextMultiLine4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="10sp"

        android:editable="false"
        android:elegantTextHeight="false"
        android:ellipsize="none"
        android:ems="10"
        android:fontFamily="@font/gothammedium"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:justificationMode="inter_word"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textColor="#227296"
        tools:text="@string/descripcion_clinicas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="141dp"
            android:layout_height="412dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/doctor" />

        <LinearLayout
            android:layout_width="276dp"
            android:layout_height="408dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:fontFamily="@font/gothambold"
                android:text="SERVICIOS DE"
                android:textAlignment="viewStart"
                android:textColor="#22487E"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:fontFamily="@font/gothambold"
                android:text="SALUD"
                android:textAlignment="textStart"
                android:textColor="#227296"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text=" ■ Enfermería"
                android:textAlignment="viewStart"
                android:textColor="#227296"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text=" ■ Medicina General"
                android:textAlignment="viewStart"
                android:textColor="#227296"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text=" ■ Odontología"
                android:textAlignment="viewStart"
                android:textColor="#227296"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text=" ■ Medicina Básica"
                android:textAlignment="viewStart"
                android:textColor="#227296"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextTextMultiLine5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"

                android:editable="false"
                android:elegantTextHeight="false"
                android:ellipsize="none"
                android:ems="10"
                android:fontFamily="@font/gothammedium"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:justificationMode="inter_word"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:soundEffectsEnabled="false"
                android:textAlignment="center"
                android:textColor="#227296"
                tools:text="@string/descripcion_cm2" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:srcCompat="@drawable/iconoreceta" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothammedium"
                android:text="Click Aquí"
                android:textAlignment="center"
                android:textColor="#227296"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="3sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/gothammedium"
            android:gravity="center_vertical"
            android:text="La atención es gratuita"
            android:textAlignment="center"
            android:textColor="#227296"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/logodariomacas" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gothambold"
            android:text="INICIO"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gothambold"
            android:text="NOTICIAS"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gothambold"
            android:text="CONTACTENOS"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>