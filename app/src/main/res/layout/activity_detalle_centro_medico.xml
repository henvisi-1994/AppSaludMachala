<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondoapp"
    android:layout_height="match_parent"

    tools:context=".DetalleCentroMedico">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            app:srcCompat="@drawable/logoredsaud" />

        <TextView
            android:id="@+id/txvnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothambold"
            android:text="U.M.M. Dr. Pomerio Cabrera"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothambold"
            android:text="Especialidades"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <GridLayout
            android:layout_width="352dp"
            android:layout_height="232dp"
            android:layout_margin="10dp"
            android:columnCount="2"
            android:rowCount="2"
            android:textAlignment="center">

            <TextView
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Obstetricia"
                android:textSize="16sp" />

            <TextView
                android:fontFamily="@font/gothambold"
                android:text="■ Medicina General"
                android:textSize="16sp" />

            <TextView
                android:fontFamily="@font/gothambold"
                android:text="■ Odontología"
                android:textSize="16sp" />

            <TextView
                android:fontFamily="@font/gothambold"
                android:text="■ Psicología"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Medico Cirujano"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Ginecología"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Hospitalización"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Partos"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Nebulizaciones"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Laboratorio"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Farmacia"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:fontFamily="@font/gothambold"
                android:text="■ Enfermeria"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothambold"
                android:text="■ Medicina General(Medicos Residentes)"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </GridLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txvtelefono"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/container"
        android:fontFamily="@font/gothambold"
        android:text="(07)2927200 / (07)2927201"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txvdireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvtelefono"
        android:fontFamily="@font/gothambold"
        android:text='Barrio "4 de Abril"'
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvdireccion"
        android:layout_marginTop="24dp"
        android:background="#143E71"
        android:fontFamily="@font/gothambold"
        android:onClick="ubicacion"
        android:text="VER UBICACIÓN"
        android:textColor="#FFFFFF" />

</RelativeLayout>