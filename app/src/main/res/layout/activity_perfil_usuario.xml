<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondogeneral"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingBottom="5dp"
    tools:context=".PerfilUsuario">

    <TextView
        android:id="@+id/textView50"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/gothambold"
        android:text="PERFIL DE USUARIO"
        android:textAlignment="center"
        android:textColor="@color/azultitulo"
        android:textSize="@dimen/titulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/nombreUsu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView50">

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gothambold"
            android:text="Nombre de Usuario: "
            android:textColor="@color/azultitulo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_nomb_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="Nombre de usuario"
            android:inputType="textPersonName"
            android:textColor="@color/azulparrafos"
            android:textColorHint="@color/azulparrafos"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/identificacion">

        <TextView
            android:id="@+id/textView58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gothambold"
            android:text="Email:"
            android:textColor="@color/azultitulo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_emailu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/azulparrafos"
            android:textColorHint="@color/azulparrafos"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/telefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email">

        <TextView
            android:id="@+id/textView59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gothambold"
            android:text="Teléfono:"
            android:textColor="@color/azultitulo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_telef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="Teléfono"
            android:inputType="phone"
            android:maxLength="10"
            android:paddingLeft="50dp"
            android:textColor="@color/azulparrafos"
            android:textColorHint="@color/azulparrafos"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/identificacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsu">

        <TextView
            android:id="@+id/textView57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gothambold"
            android:text="Identificación:"
            android:textColor="@color/azultitulo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_identificacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="Identificación"
            android:inputType="number"
            android:maxLength="13"
            android:paddingLeft="30dp"
            android:textColor="@color/azulparrafos"
            android:textColorHint="@color/azulparrafos"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/direccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefono">

        <TextView
            android:id="@+id/textView60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gothambold"
            android:text="Dirección"
            android:textColor="@color/azultitulo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_direcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:gravity="start|top"
            android:hint="Dirección"
            android:inputType="textMultiLine"
            android:paddingLeft="50dp"
            android:textColor="@color/azulparrafos"
            android:textColorHint="@color/azulparrafos"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/direccion">

        <TextView
            android:id="@+id/textView61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gothambold"
            android:paddingLeft="25dp"
            android:text="Contraseña:"
            android:textColor="@color/azultitulo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/gothammedium"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textColor="@color/azulparrafos"
            android:textColorHint="@color/azulparrafos"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/botones"
        android:onClick="guardar"
        android:text="GUARDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkcc"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkcc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:buttonTint="@color/azultitulo"
        android:fontFamily="@font/gothambold"
        android:onClick="cambiarclave"

        android:text="Cambiar Contraseña"
        android:textColor="@color/azulparrafos"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

</androidx.constraintlayout.widget.ConstraintLayout>