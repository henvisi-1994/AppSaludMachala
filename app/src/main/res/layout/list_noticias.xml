<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgvimagen_noticia"
        android:layout_width="92dp"
        android:layout_height="89dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_agenda" />

    <EditText
        android:id="@+id/txmltitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/gothammedium"
        android:inputType="textMultiLine"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:text="Titulo de noticia"
        android:textAlignment="center"
        android:textColor="@color/azultitulo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toEndOf="@+id/imgvimagen_noticia"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvfecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/gothammedium"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:text="fecha"
        android:textColor="#227296"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgvimagen_noticia"
        app:layout_constraintTop_toBottomOf="@+id/txmltitulo"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>