<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondogeneral"
    tools:context=".QuinesSomos">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        app:srcCompat="@drawable/logoredsaud" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothambold"
        android:text="¿QUÍENES SOMOS?"
        android:textAlignment="center"
        android:textColor="#22487E"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/gothammedium"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Una empresa pública municipal, que atravez de los servicios de salud brindamos por medio de los Centros Médicos Municipales y Clínicas Móviles, busca garantizar el cuidado integral en la salud de la ciudadanía a costos solidarios."
        android:textAlignment="center"
        android:textColor="#227296" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Síguenos, infórmate y comparte:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="fb"
            app:srcCompat="@drawable/fb" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="instagram"
            app:srcCompat="@drawable/instagra" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="tw"
            app:srcCompat="@drawable/twitter" />

    </LinearLayout>
</LinearLayout>